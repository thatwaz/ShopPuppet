<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Shadow Layer -->
    <item >
        <shape
            android:shape="rectangle">
            <solid android:color="#40000000"/> <!-- Adjust the shadow color here -->
            <corners android:radius="4dp" />
        </shape>
    </item>

    <!-- Content Layer -->
    <item android:right="1dp" android:bottom="1dp">
        <shape
            android:shape="rectangle">
            <solid android:color="@android:color/white"/> <!-- Background color of the card -->
            <corners android:radius="4dp" />
        </shape>
    </item>

</layer-list>
