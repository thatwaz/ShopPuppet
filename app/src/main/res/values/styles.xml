<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TransparentIndicatorStyle">

        <item name="android:background">@color/transparent</item>
    </style>

    <style name="ToolbarTitleTextAppearance" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:fontFamily">@font/toolbar_font</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ToolbarTheme" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="actionOverflowButtonStyle">@style/OverflowMenuButtonStyle</item>
    </style>

    <style name="PopupTheme" parent="ThemeOverlay.AppCompat.Light">

        <item name="android:textColor">@color/textColorDark</item>
    </style>


    <style name="OverflowMenuButtonStyle" parent="Widget.AppCompat.ActionButton.Overflow">
        <item name="android:src">@drawable/ic_menu</item> <!-- Your custom icon -->
    </style>


    <!-- Positive Button Style -->
    <style name="PositiveButtonStyle" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:textColor">@color/colorError</item>
    </style>

    <!-- Negative Button Style -->
    <style name="NegativeButtonStyle" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:textColor">@color/textColorDark</item>
    </style>



    <style name="AlertDialogStyle" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:textColor">@color/textColorDark</item>
        <item name="android:textColorPrimary">@color/textColorDark</item>
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
    </style>






</resources>