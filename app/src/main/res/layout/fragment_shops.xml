<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:paddingBottom="80dp"
    tools:context=".presentation.fragments.ShopsFragment">




    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_top"
        android:layout_width="match_parent"
        android:elevation="2dp"
        android:layout_height="50dp"
        android:background="@color/off_white"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tv_edit_delete_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="20dp"
            android:clickable="true"
            android:focusable="true"
            android:minHeight="48dp"
            android:text="Edit/Delete a Shop"
            android:textColor="@color/clickable_blue"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>


    <!-- RecyclerView to display shops -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/shopsRecyclerView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="16dp"
        android:requiresFadingEdge="vertical"
        android:fadingEdgeLength="150dp"
        app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cl_top"
        app:spanCount="3"
        tools:listitem="@layout/item_shop" />

    <!-- TextView to display a message when no shops are present -->
    <TextView
        android:id="@+id/noShopsTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="You currently have no shops"
        android:textSize="16sp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />






        <!-- Button to add a new shop -->
        <Button
            android:id="@+id/btn_add_shop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="8dp"
            android:drawableLeft="@drawable/ic_add"
            android:text="Add New Shop"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"  />






</androidx.constraintlayout.widget.ConstraintLayout>