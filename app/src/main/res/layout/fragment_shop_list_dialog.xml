<?xml version="1.0" encoding="utf-8"?>
<!-- shop_list_dialog_fragment.xml -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/textViewDialogTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select a Shop:"
        android:textSize="18sp"
        android:textStyle="bold" />

    <RadioGroup
        android:id="@+id/radioGroupShops"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Add radio buttons dynamically based on shop names -->
        <!-- Example: -->
        <!--
        <RadioButton
            android:id="@+id/radioButtonShop1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Shop 1" />

        <RadioButton
            android:id="@+id/radioButtonShop2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Shop 2" />
        -->

    </RadioGroup>

    <Button
        android:id="@+id/buttonSelectShop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select"
        android:onClick="onSelectShopClick" />

    <Button
        android:id="@+id/buttonCancel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cancel"
        android:onClick="onCancelClick" />
</LinearLayout>
