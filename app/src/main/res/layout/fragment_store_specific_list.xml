<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_unpurchased_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Unpurchased Items"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:padding="8dp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_unpurchased_items"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/tv_unpurchased_label"
        app:layout_constraintBottom_toTopOf="@id/tv_purchased_label"
        tools:listitem="@layout/item_store_specific"/>

    <TextView
        android:id="@+id/tv_purchased_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Purchased Items"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/rv_unpurchased_items"
        android:padding="8dp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_purchased_items"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/tv_purchased_label"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:listitem="@layout/item_store_specific"/>

</androidx.constraintlayout.widget.ConstraintLayout>
